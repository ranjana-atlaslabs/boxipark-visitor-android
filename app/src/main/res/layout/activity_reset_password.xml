<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ResetPassword.ResetPasswordActivity">

    <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:id="@+id/aForgotBack"
            android:scaleType="centerCrop"/>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:weightSum="11" android:background="#43FCFAFA"
    >
        <Space
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:layout_weight="0.94"/>

        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:layout_weight="0.98" android:weightSum="3">
            <Space
                    android:layout_width="100dp"
                    android:layout_height="match_parent" android:layout_weight="1"/>
            <TextView
                    android:text="Reset your password."
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:id="@+id/aHeadPass" android:layout_weight="1"
                    android:gravity="center_vertical" android:textSize="30sp" android:textColor="#72C3D5"/>
            <Space
                    android:layout_width="100dp"
                    android:layout_height="match_parent" android:layout_weight="1"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:layout_weight="0.98" android:weightSum="3">
            <Space
                    android:layout_width="100dp"
                    android:layout_height="match_parent" android:layout_weight="1"/>
            <TextView
                    android:text="Please enter your email address to reset your password"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:id="@+id/aTopTextPass" android:layout_weight="1"
                    android:textSize="18sp"/>
            <Space
                    android:layout_width="100dp"
                    android:layout_height="match_parent" android:layout_weight="1"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:layout_weight="1.045" android:weightSum="3">
            <Space
                    android:layout_width="100dp"
                    android:layout_height="match_parent" android:layout_weight="1"/>
            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:inputType="textPersonName"
                    android:background="@drawable/tounded_text"
                    android:ems="10"
                    android:id="@+id/aValidMail" android:layout_weight="1"
                    android:hint="Email" android:textColorHint="#8B8380"
                    android:paddingLeft="20dp"
                    android:textSize="14sp" android:paddingTop="5dp" android:paddingBottom="5dp"
                    android:textColor="#FFFFFF"/>
            <Space
                    android:layout_width="100dp"
                    android:layout_height="match_parent" android:layout_weight="1"/>
        </LinearLayout>
        <Space
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:layout_weight="1.05"/>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:layout_weight="1.5" android:weightSum="3"
                android:visibility="invisible">
            <Space
                    android:layout_width="100dp"
                    android:layout_height="match_parent" android:layout_weight="1"/>
            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:inputType="textPersonName|text|textPassword|textEmailAddress"
                    android:background="@drawable/tounded_text"
                    android:ems="10"
                    android:layout_weight="1" android:hint="Password"
                    android:textColorHint="#8B8380" android:paddingLeft="20dp" android:textSize="14sp"
                    android:paddingTop="5dp" android:paddingBottom="5dp" android:textColor="#FFFFFF"/>
            <Space
                    android:layout_width="100dp"
                    android:layout_height="match_parent" android:layout_weight="1"/>
        </LinearLayout>
        <Space
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:layout_weight="1.09"/>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:layout_weight="1.045" android:weightSum="3"
                android:minHeight="0dp" android:minWidth="0dp">
            <Space
                    android:layout_weight="1" android:layout_width="100dp" android:layout_height="match_parent"/>
            <Button
                    android:id="@+id/aRequestLink"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="#ffffff"
                    android:background="@drawable/button"
                    android:text="@string/menu_send" android:layout_weight="1" android:textSize="14sp"
                    android:minHeight="0dp"
                    android:minWidth="0dp" android:textAllCaps="false"/>
            <Space
                    android:layout_weight="1" android:layout_width="100dp" android:layout_height="match_parent"/>
        </LinearLayout>
        <TextView
                android:text="Forgot your password?"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:layout_weight="1"
                android:gravity="center_horizontal" android:paddingTop="10dp" android:textColor="#FFFFFF"
                app:autoSizeTextType="none" android:visibility="invisible"/>
        <Space
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:layout_weight="0.78"/>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:layout_weight="1.04" android:visibility="invisible">
            <TextView
                    android:text="Don't have an account?"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" android:layout_weight="1"
                    android:gravity="right|center_horizontal" android:textColor="#F7FFFFFF"
                    app:autoSizeTextType="none"/>
            <TextView
                    android:text="Sign up"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" android:layout_weight="1"
                    android:textColor="#FFFDFD" android:gravity="left" android:textStyle="bold"
                    android:paddingLeft="3dp" app:autoSizeTextType="none"/>
        </LinearLayout>

    </LinearLayout>
</android.support.constraint.ConstraintLayout>