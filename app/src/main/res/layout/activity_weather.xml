<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".WeatherActivity">
    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:background="#9BD0EF">
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:orientation="vertical">
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:layout_weight="1" android:layout_gravity="bottom"
                        android:weightSum="2">
                    <TextView
                            android:text="Sunny"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" android:id="@+id/textView16" android:gravity="center"
                            android:textSize="40sp" android:layout_weight="1"/>
                    <TextView
                            android:text="30Â°"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" android:id="@+id/textView14"
                            android:gravity="center|top"
                            android:textSize="80sp" android:layout_weight="1"/>
                </LinearLayout>
                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" app:srcCompat="@drawable/weathercl"
                        android:id="@+id/imageView4" android:layout_weight="1" android:adjustViewBounds="true"
                        android:scaleType="fitStart"/>
            </LinearLayout>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:weightSum="3">
                <Space
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" android:layout_weight="1.1"/>
                <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" app:srcCompat="@drawable/icecreamw"
                        android:id="@+id/imageView8" android:adjustViewBounds="true" android:layout_weight="0.8"/>
                <Space
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" android:layout_weight="1.1"/>
            </LinearLayout>
            <TextView
                    android:text='Get a free ice cream from "Before it melts" between 2.00 p.m. to 4.00 p.m. by providing your card number.'
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/textView17"
                    android:gravity="center_horizontal" android:minLines="4" android:maxLines="4"
                    android:paddingLeft="50dp" android:paddingRight="50dp" android:textSize="20sp"/>
            <ListView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:id="@+id/aWeatherList" android:dividerHeight="5.5dp"
                    android:divider="#6494B1"/>
        </LinearLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>