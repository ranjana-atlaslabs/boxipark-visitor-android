<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Activity.WeatherActivity">
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:weightSum="4" android:background="#9ACFEE"
            android:focusableInTouchMode="true">
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:layout_weight="1" android:weightSum="2">
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:layout_weight="1"
                    android:layout_gravity="bottom"
                    android:weightSum="3" android:paddingLeft="30dp">
                <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" app:srcCompat="@drawable/back_button"
                        android:id="@+id/aMenuBackW"
                        tools:layout_editor_absoluteX="16dp" android:adjustViewBounds="true" android:scaleX="1"
                        android:scaleY="1" android:layout_weight="1.3" android:scaleType="fitStart"/>
                <TextView
                        android:text="Sunny"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" android:id="@+id/aWeatherTextW"
                        android:gravity="top|left"
                        android:textSize="35sp" app:autoSizeTextType="none" android:layout_gravity="bottom"
                        android:textColor="#FAF9F9" android:layout_weight="1"/>
                <TextView
                        android:text="30Â°"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" android:id="@+id/aTempViewW"
                        android:gravity="center_horizontal|top|left"
                        android:layout_gravity="bottom"
                        android:ellipsize="none"
                        android:scrollHorizontally="false" app:autoSizeTextType="none"
                        android:textColor="#FAF9F9" android:layout_marginTop="-15dp" android:layout_weight="1"/>
            </LinearLayout>
            <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" app:srcCompat="@drawable/weathercl"
                    android:id="@+id/imageView4" android:layout_weight="1" android:adjustViewBounds="true"
                    android:scaleType="fitStart" android:scaleX="1" android:scaleY="1"
            />
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:weightSum="3" android:layout_weight="1">
            <Space
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:layout_weight="1.1"/>
            <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" app:srcCompat="@drawable/icecreamw"
                    android:id="@+id/imageView8" android:adjustViewBounds="true" android:layout_weight="0.8"
                    android:scaleX="1.3" android:scaleY="1.3"/>
            <Space
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:layout_weight="1.1"/>
        </LinearLayout>
        <TextView
                android:text='Get a free ice cream from "Before it melts" between 2.00 p.m. to 4.00 p.m. by providing your card number.'
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:id="@+id/aWeatherDescription"
                android:gravity="center_horizontal" android:minLines="4" android:maxLines="4"
                android:paddingLeft="40dp" android:paddingRight="40dp" android:textSize="15sp"
                android:paddingBottom="20dp" android:layout_weight="1" app:autoSizeTextType="none"
                android:textColor="#FFFFFF"/>
        <ListView
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:id="@+id/aWeatherList"
                android:dividerHeight="2dp"
                android:divider="#6597B5" android:layout_weight="1" android:background="#87C8EE"/>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>