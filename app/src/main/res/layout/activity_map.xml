<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Activity.MapActivity">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:weightSum="4">
        <android.support.v7.widget.Toolbar
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#F9F9F9"
                android:theme="?attr/actionBarTheme"
                android:minHeight="?attr/actionBarSize" android:id="@+id/toolbar3"
                android:layout_weight="1.25" android:layout_marginLeft="-15dp" android:paddingTop="5dp">
            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" app:srcCompat="@drawable/back_button"
                    android:id="@+id/aMenuBackM"
                    tools:layout_editor_absoluteX="16dp" android:adjustViewBounds="true" android:scaleX="0.8"
                    android:scaleY="0.8"/>
        </android.support.v7.widget.Toolbar>
        <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent" app:srcCompat="@drawable/logo_new" android:id="@+id/imageView2"
                android:scaleX="0.7" android:scaleY="0.7" android:layout_weight="1.1"/>
        <WebView
                android:id="@+id/aWebView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#F11212"
                android:layout_weight="0.5">
        </WebView>
        <TextView
                android:text="TAVISTOCK LAKES BLVD"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:id="@+id/aMapBottom" android:layout_weight="1.15"
                android:background="#58595B" android:gravity="center_horizontal|center_vertical"
                android:textColor="#FDFCFC"/>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>