<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="center_horizontal"
              android:orientation="vertical"
              android:padding="16dp" android:background="@color/colorTransparent">
    <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" app:cardCornerRadius="30dp" android:scaleX="0.9" android:scaleY="0.9">
        <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content" app:srcCompat="@drawable/taco" android:id="@+id/imageView3"
                android:adjustViewBounds="true"/>
    </android.support.v7.widget.CardView>
    <TextView
            android:text="$ 8.00"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/textView6" android:textColor="#0C0C0C"
            android:textSize="20sp"/>
    <TextView
            android:text="TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/aMenuItem" android:textColor="#070707"
            android:textSize="14sp"/>
</LinearLayout>