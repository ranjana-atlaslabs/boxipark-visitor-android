<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Activity.SearchActivity"
       >
       <LinearLayout
               android:orientation="vertical"
               android:layout_width="match_parent"
               android:layout_height="match_parent" android:weightSum="3">
              <Space
                      android:layout_width="match_parent"
                      android:layout_height="match_parent" android:layout_weight="1.45"/>
              <LinearLayout
                      android:orientation="horizontal"
                      android:layout_width="match_parent"
                      android:layout_height="match_parent" android:layout_weight="1.43" android:weightSum="3">
                     <Space
                             android:layout_width="match_parent"
                             android:layout_height="match_parent" android:layout_weight="1.4"/>
                     <EditText
                             android:layout_width="match_parent"
                             android:layout_height="match_parent"
                             android:inputType="textPersonName"
                             android:text="Canonita"
                             android:ems="10"
                             android:id="@+id/aSearchBar" android:layout_weight="0.2"
                             android:background="@drawable/search_corners" android:textColor="#A2A2A2"
                             android:paddingLeft="20dp" android:drawableEnd="@drawable/ic_search_black_24dp"
                             android:paddingRight="10dp" android:drawableRight="@drawable/ic_search_black_24dp"/>
                     <Space
                             android:layout_width="match_parent"
                             android:layout_height="match_parent" android:layout_weight="1.4"/>
              </LinearLayout>
              <TextView
                      android:layout_width="match_parent"
                      android:layout_height="match_parent" android:id="@+id/aNavBack" android:layout_weight="0.15"/>
       </LinearLayout>
</android.support.constraint.ConstraintLayout>