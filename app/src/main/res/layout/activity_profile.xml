<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".UserProfile.ProfileActivity">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:weightSum="20" android:paddingLeft="20dp"
            android:paddingRight="20dp" android:focusableInTouchMode="true">
        <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent" app:srcCompat="@drawable/user" android:id="@+id/imageView11"
                android:layout_weight="0.9" android:paddingTop="20dp" android:paddingLeft="0dp"
                android:paddingRight="0dp" android:paddingBottom="0dp"/>
        <TextView
                android:text="Edit photo"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" android:id="@+id/aEditPhoto" android:layout_weight="1"
                android:gravity="center_horizontal" android:paddingTop="5dp" app:autoSizeTextType="none"
                android:paddingLeft="0dp" android:paddingRight="0dp" android:paddingBottom="0dp"
                android:layout_gravity="center_horizontal"/>
        <TextView
                android:text="Private Information"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:id="@+id/aPInfo" android:layout_weight="1"
                android:paddingLeft="0dp" app:autoSizeTextType="none" android:paddingBottom="0dp"
                android:paddingTop="0dp" android:paddingRight="0dp" android:textColor="#CECECE"/>
        <TextView
                android:text="Full Name"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:id="@+id/aFullName" android:layout_weight="1.02"
                android:paddingLeft="0dp" app:autoSizeTextType="none" android:textColor="#050505"
                android:paddingTop="0dp" android:paddingRight="0dp" android:paddingBottom="0dp"
                android:gravity="bottom"/>
        <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="textPersonName"
                android:ems="10"
                app:backgroundTint="#050505"
                android:id="@+id/aFullNameText" android:layout_weight="1" android:paddingLeft="0dp"
                android:paddingTop="0dp" android:paddingRight="0dp" android:paddingBottom="10dp"
                android:textColorLink="#363636" android:textColorHighlight="#34474646" android:text="John Doe"/>
        <TextView
                android:text="Email"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:id="@+id/aEmail" android:layout_weight="1.02"
                android:paddingLeft="0dp" app:autoSizeTextType="none" android:textColor="#050505"
                android:paddingRight="0dp"
                android:gravity="bottom"/>
        <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="textPersonName"
                android:ems="10"
                app:backgroundTint="#050505"
                android:id="@+id/aEmailText" android:layout_weight="1" android:paddingLeft="0dp"
                android:paddingTop="0dp" android:paddingRight="0dp" android:paddingBottom="10dp"
                android:textColorLink="#363636" android:textColorHighlight="#34474646"
                android:text="someone@email.com"/>
        <TextView
                android:text="Phone Number"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:id="@+id/aPhone" android:layout_weight="1.02"
                android:paddingLeft="0dp" app:autoSizeTextType="none" android:textColor="#050505"
                android:paddingRight="0dp"
                android:gravity="bottom"/>
        <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="textPersonName"
                android:ems="10"
                app:backgroundTint="#050505"
                android:id="@+id/aPhoneText" android:layout_weight="1" android:paddingLeft="0dp"
                android:paddingTop="0dp" android:paddingRight="0dp" android:paddingBottom="10dp"
                android:textColorLink="#363636" android:textColorHighlight="#34474646" android:text="+12345678901"/>
        <TextView
                android:text="Reset password"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:id="@+id/aReset" android:layout_weight="0.95"
                android:paddingLeft="0dp" app:autoSizeTextType="none"
                android:paddingTop="0dp" android:paddingRight="0dp" android:gravity="center_vertical"
                android:textColor="#CECECE"/>
        <TextView
                android:text="Current password"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:id="@+id/aCurrentP" android:layout_weight="1.02"
                android:paddingLeft="0dp" app:autoSizeTextType="none" android:textColor="#050505"
                android:paddingTop="0dp" android:paddingRight="0dp" android:paddingBottom="0dp"
                android:gravity="bottom"/>
        <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="textWebPassword"
                android:ems="10"
                app:backgroundTint="#050505"
                android:id="@+id/aCurrentPText" android:layout_weight="1" android:paddingLeft="0dp"
                android:paddingTop="0dp" android:paddingRight="0dp" android:paddingBottom="0dp"
                android:textColorLink="#363636" android:textColorHighlight="#34474646" android:text="123456789"/>
        <TextView
                android:text="New password"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:id="@+id/aNewP" android:layout_weight="1.02"
                android:paddingLeft="0dp" app:autoSizeTextType="none" android:textColor="#050505"
                android:paddingTop="0dp" android:paddingRight="0dp" android:paddingBottom="0dp"
                android:gravity="bottom"/>
        <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="textWebPassword"
                android:ems="10"
                app:backgroundTint="#050505"
                android:id="@+id/aNewPText" android:layout_weight="1" android:paddingLeft="0dp"
                android:paddingTop="0dp" android:paddingRight="0dp" android:paddingBottom="0dp"
                android:textColorLink="#363636" android:textColorHighlight="#34474646" android:text="123456789"/>
        <TextView
                android:text="Confirm password"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:id="@+id/aConfirmP" android:layout_weight="1.02"
                android:paddingLeft="0dp" app:autoSizeTextType="none" android:textColor="#050505"
                android:paddingTop="0dp" android:paddingRight="0dp" android:paddingBottom="0dp"
                android:gravity="bottom"/>
        <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="textWebPassword"
                android:ems="10"
                app:backgroundTint="#050505"
                android:id="@+id/aConfirmPText" android:layout_weight="1" android:paddingLeft="0dp"
                android:paddingTop="0dp" android:paddingRight="0dp" android:paddingBottom="0dp"
                android:textColorLink="#363636" android:textColorHighlight="#34474646" android:text="123456789"/>
        <Space
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:layout_weight="1.01"/>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:layout_weight="1" android:weightSum="3"
                android:paddingTop="0dp" android:paddingLeft="0dp" android:paddingRight="0dp"
        >
            <Space
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:layout_weight="1.3"/>
            <Button
                    android:text="Save"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:id="@+id/aSave" android:layout_weight="0.4"
                    android:background="@drawable/offer_button" android:textColor="#FAF5F5"
                    android:textAllCaps="false"/>
            <Space
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:layout_weight="1.3"/>
        </LinearLayout>
        <Space
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:layout_weight="1.04"/>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:layout_weight="1" android:weightSum="3"
                android:paddingTop="0dp" android:paddingLeft="0dp" android:paddingRight="0dp"
        >
            <Space
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:layout_weight="1.3"/>
            <Button
                    android:text="@android:string/cancel"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:id="@+id/aCancel" android:layout_weight="0.4"
                    android:background="@drawable/cancel_button" android:textAllCaps="false"/>
            <Space
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:layout_weight="1.3"/>
        </LinearLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>