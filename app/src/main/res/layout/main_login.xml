<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainLogin">
    <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/imageView5" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:background="@drawable/background"/>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:weightSum="5.6">
        <Space
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:layout_weight="1"/>
        <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content" app:srcCompat="@drawable/logo" android:id="@+id/imageView6"
                android:layout_weight="0.1" android:scaleType="center" android:adjustViewBounds="false"
                android:scaleX="0.5" android:scaleY="0.5"/>
        <TextView
                android:text="CLEAR SKIES"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/textView" android:layout_weight="0.3"
                app:autoSizeTextType="uniform" android:autoText="false" android:textColor="#F9FAFC"
                android:freezesText="false" android:textIsSelectable="false"
                android:gravity="center_horizontal" app:autoSizeMaxTextSize="30sp" app:autoSizeMinTextSize="9sp"/>
        <TextView
                android:text="80Â°"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/textView2" android:layout_weight="0.1"
                android:gravity="center_horizontal" app:autoSizeMaxTextSize="200sp" app:autoSizeTextType="uniform"
                app:autoSizeMinTextSize="14sp" android:textSize="90sp" android:textColor="#FDFDFD"/>

        <Space
                android:layout_weight="3.7" android:layout_width="1dp" android:layout_height="30dp"/>

        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:layout_weight="0.1" android:weightSum="3">
            <Space
                    android:layout_weight="1" android:layout_width="100dp" android:layout_height="30dp"/>
            <Button
                    android:id="@+id/aSignUp2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="#ffffff"
                    android:background="@drawable/button"
                    android:text="Get Started" android:layout_weight="1" android:textSize="14sp"
                    android:minHeight="0dp" android:minWidth="0dp"/>
            <Space
                    android:layout_weight="1" android:layout_width="100dp" android:layout_height="30dp"/>
        </LinearLayout>

    </LinearLayout>
</android.support.constraint.ConstraintLayout>