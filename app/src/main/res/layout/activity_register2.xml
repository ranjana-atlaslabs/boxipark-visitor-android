<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Login.LoyaltyLogin">
    <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:id="@+id/aBackReg2"
            android:scaleType="centerCrop"/>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:weightSum="12" android:background="@color/colorTransparent"
    >
        <Space
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:layout_weight="0.93"/>

        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:layout_weight="0.89" android:weightSum="3"
                android:paddingBottom="40dp">
            <Space
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:layout_weight="1.1"/>
            <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" app:srcCompat="@drawable/logo" android:id="@+id/aLogoGetStart"
                    android:layout_weight="0.8" android:scaleType="fitCenter"
                    android:scaleX="1" android:scaleY="1" android:adjustViewBounds="false"/>
            <Space
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:layout_weight="1.1"/>
        </LinearLayout>
        <Space
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:layout_weight="1.06"/>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:layout_weight="1.035" android:weightSum="3">
            <Space
                    android:layout_width="100dp"
                    android:layout_height="match_parent" android:layout_weight="1"/>
            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:inputType="textPersonName|text"
                    android:background="@drawable/tounded_text"
                    android:ems="10"
                    android:id="@+id/aNewName" android:layout_weight="1" android:hint="Name"
                    android:textColorHint="#8B8380" android:paddingLeft="20dp" android:textSize="14sp"
                    android:paddingBottom="5dp" android:paddingTop="5dp" android:textColor="#FCF9F9"/>
            <Space
                    android:layout_width="100dp"
                    android:layout_height="match_parent" android:layout_weight="1"/>
        </LinearLayout>
        <Space
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:layout_weight="1.07"/>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:layout_weight="1.035" android:weightSum="3">
            <Space
                    android:layout_width="100dp"
                    android:layout_height="match_parent" android:layout_weight="1"/>
            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:inputType="textPersonName"
                    android:background="@drawable/tounded_text"
                    android:ems="10"
                    android:id="@+id/aNewUsername" android:layout_weight="1"
                    android:hint="Email" android:textColorHint="#8B8380" android:paddingLeft="20dp"
                    android:textSize="14sp" android:paddingBottom="5dp" android:paddingTop="5dp"
                    android:textColor="#FCF9F9"/>
            <Space
                    android:layout_width="100dp"
                    android:layout_height="match_parent" android:layout_weight="1"/>
        </LinearLayout>
        <Space
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:layout_weight="1.07"/>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:layout_weight="1.035" android:weightSum="3">
            <Space
                    android:layout_width="100dp"
                    android:layout_height="match_parent" android:layout_weight="1"/>
            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:inputType="number"
                    android:background="@drawable/tounded_text"
                    android:ems="10"
                    android:layout_weight="1" android:hint="Mobile Number"
                    android:textColorHint="#8B8380" android:paddingLeft="20dp" android:textSize="14sp"
                    android:paddingBottom="5dp" android:paddingTop="5dp" android:id="@+id/aNewMobile"
                    android:textColor="#FCF9F9"/>
            <Space
                    android:layout_width="100dp"
                    android:layout_height="match_parent" android:layout_weight="1"/>
        </LinearLayout>
        <Space
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:layout_weight="1.07"/>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:layout_weight="1.035" android:weightSum="3">
            <Space
                    android:layout_width="100dp"
                    android:layout_height="match_parent" android:layout_weight="1"/>
            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:inputType="textPersonName|text|textPassword|textEmailAddress"
                    android:background="@drawable/tounded_text"
                    android:ems="10"
                    android:id="@+id/aNewPassword" android:layout_weight="1" android:hint="Password"
                    android:textColorHint="#8B8380" android:paddingLeft="20dp" android:textSize="14sp"
                    android:paddingBottom="5dp" android:paddingTop="5dp" android:textColor="#FCF9F9"/>
            <Space
                    android:layout_width="100dp"
                    android:layout_height="match_parent" android:layout_weight="1"/>
        </LinearLayout>
        <Space
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:layout_weight="1.05"/>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:layout_weight="1.035" android:weightSum="3"
                android:minHeight="0dp" android:minWidth="0dp">
            <Space
                    android:layout_weight="1" android:layout_width="100dp" android:layout_height="match_parent"/>
            <Button
                    android:id="@+id/aNewSignup"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="#ffffff"
                    android:background="@drawable/button"
                    android:text="Sign up" android:layout_weight="1" android:textSize="14sp" android:minHeight="0dp"
                    android:minWidth="0dp" android:textAllCaps="false"/>
            <Space
                    android:layout_weight="1" android:layout_width="100dp" android:layout_height="match_parent"/>
        </LinearLayout>

    </LinearLayout>
</android.support.constraint.ConstraintLayout>