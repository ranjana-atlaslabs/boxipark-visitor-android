<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Activity.MainMenu" android:background="@android:color/white">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:background="@android:color/white">
        <Button
                android:text="Add"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/aB1"/>
        <Button
                android:text="Delete"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/aB2"/>
        <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:id="@+id/aScroll"
        >
            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                          android:orientation="vertical" android:weightSum="3" android:scaleX="1.2"
                          android:scaleY="1.1" android:id="@+id/aVScroll"/>
        </ScrollView>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>