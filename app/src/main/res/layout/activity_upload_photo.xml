<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Activity.UploadPhoto" android:background="@android:color/transparent">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:weightSum="5" android:background="@color/colorTransparent">
        <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:layout_weight="0.17"/>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:layout_weight="1.18" android:weightSum="3">
            <Space
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:layout_weight="1.25"/>
            <Button
                    android:text="Upload Photo"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:id="@+id/aUploadP" android:layout_weight="0.5"
                    android:background="@drawable/offer_button" android:textAllCaps="false"/>
            <Space
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:layout_weight="1.25"/>
        </LinearLayout>
        <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:id="@+id/textView2" android:layout_weight="1.24"/>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:layout_weight="1.18" android:weightSum="3">
            <Space
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:layout_weight="1.25"/>
            <Button
                    android:text="Delete Photo"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:id="@+id/aDeleteP" android:layout_weight="0.5"
                    android:background="@drawable/cancel_button" android:textAllCaps="false"
                    android:textColor="#0A0A0A"/>
            <Space
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:layout_weight="1.25"/>
        </LinearLayout>
        <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:id="@+id/textView3" android:layout_weight="1.23"/>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>