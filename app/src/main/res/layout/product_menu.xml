<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ProductMenu" android:background="#FFFFFF">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                          android:orientation="vertical" android:weightSum="6">
                <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" app:srcCompat="@drawable/barnona"
                        android:id="@+id/imageView2" android:scaleX="1" android:scaleY="1"
                        android:adjustViewBounds="true" android:layout_weight="1"
                />
                <TextView
                        android:text="BEER ON TAP"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/textView8"
                        android:gravity="center_horizontal" android:textColor="@color/colorPrimaryDark"
                        android:layout_weight="1" android:textSize="18sp" android:textStyle="bold"/>
                <Space
                        android:layout_weight="1" android:layout_width="100dp" android:layout_height="10dp"/>
                <TextView
                        android:text="Enjoy Hyper-Local Craft beer, Brewed Just Across The Street At ttttttt Park Pizza and Brewing Company."
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/textView9"
                        android:gravity="center_horizontal" android:textSize="16dp" android:includeFontPadding="true"
                        android:layout_weight="1" android:paddingLeft="60dp" android:paddingRight="60dp"/>
                <Space
                        android:layout_weight="1" android:layout_width="match_parent" android:layout_height="10dp"/>
                <ListView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/aList1" android:paddingLeft="2dp"
                        android:layout_weight="1">
                </ListView>
                <Space
                        android:layout_weight="1" android:layout_width="match_parent" android:layout_height="10dp"/>
                <TextView
                        android:text="KEGGED COCKTAILS"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/textView10"
                        android:gravity="center_horizontal" android:textColor="@color/colorPrimaryDark"
                        android:layout_weight="1" android:textSize="18sp" android:textStyle="bold"/>
                <Space
                        android:layout_weight="1" android:layout_width="match_parent" android:layout_height="10dp"/>
                <ListView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/aList2" android:layout_weight="1"/>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>